@model List<Application.DTO.BookDTO>
<!DOCTYPE html>
<html>
<head>
    <title>Поиск</title>
</head>
<body>
    @if (Model.Count() == 0)
    {
        <h3>По вашему запросу ничего не найдено!</h3>
    }
    else
    {
        <table>
            <tr>
                <td>Id</td>
                <td>Заголовок</td>
                <td>Описание</td>
                <td></td>
            </tr>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td><a href="~/Home/Book/@book.Id">@book.Title</a></td>
                    <td>@book.DescriptionShort</td>
                </tr>
            }
        </table>
    }
</body>
</html>