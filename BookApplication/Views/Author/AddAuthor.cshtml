@model List<Application.DTO.AuthorDTO>
@{
    ViewData["Title"] = "Добавление автора";
}
<h3>Авторы</h3>
<form method="post">
    <p>
        <label>Name</label>
        <input type="text" name="Name" required />
    </p>
    <p>
        <label>Last name</label>
        <input type="text" name="LastName" required />
    </p>
    <p>
        <label>Patronymic</label>
        <input type="text" name="Patronymic" required />
    </p>
    <p>
        <label>Date of birth</label>
        <input type="date" name="DateOfBirth" required />
    </p>
    <p>
        <label>Place of birth</label>
        <input type="text" name="PlaceOfBirth" required />
    </p>
    <p>
        <label>Biography</label>
        <input type="text" name="Biography" required />
    </p>
    <br />
    <button>Добавить Автора</button>
</form>