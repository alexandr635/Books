@model List<Application.DTO.BookDTO>
<!DOCTYPE html>
<html>
<head>
    <title>Серии</title>
</head>
<body>
    <h3>Серии</h3>
    <form method="post">
        <p>
            <label>Name</label>
            <input type="text" name="SeriesName" required />
        </p>
        <p>
            <h3>Книги</h3>
            @foreach (var book in Model)
            {
                <input type="checkbox" name="@book.Id" value="@book.Title" />@book.Title<br />
            }

        </p>
        <button>Добавить серию</button>
    </form>
</body>
</html>