@using Books.Infrastructure.Pagination
@model IndexViewModel
@{
    ViewData["Title"] = "Найденные книги";
    string tagString = "";
    foreach(var tag in Model.Pattern.BookToTags)
    {
        tagString += tag.TagId + ",";
    }
}
@if (Model.Books.Count() == 0)
{
    <h3>По вашему запросу ничего не найдено!</h3>
}
else
{
    <table>
        <tr>
            <td>Id</td>
            <td>Заголовок</td>
            <td>Описание</td>
            <td></td>
        </tr>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Id</td>
                <td><a href="~/Home/Book/@book.Id">@book.Title</a></td>
                <td>@book.DescriptionShort</td>
            </tr>
        }
    </table>

    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a asp-controller="Home"
           asp-action="BookResult"
           asp-route-tagsId="@(tagString)"
           asp-route-title="@(Model.Pattern.Title)"
           asp-route-rating="@(Model.Pattern.AverageRating)"
           asp-route-author="@(Model.Pattern.AuthorId)"
           asp-route-page="@(Model.PageViewModel.PageNumber - 1)">Назад</a>
    }
    @if (Model.PageViewModel.HasNextPage)
    {
       
        <a asp-controller="Home"
           asp-action="BookResult"
           asp-route-tagsId="@(tagString)"
           asp-route-title="@(Model.Pattern.Title)"
           asp-route-rating="@(Model.Pattern.AverageRating)"
           asp-route-author="@(Model.Pattern.AuthorId)"
           asp-route-page="@(Model.PageViewModel.PageNumber + 1)">Вперед</a>
    }
}