@model Books.Application.DTO.ListDTO
@{
    ViewData["Title"] = "Добавление книги";
}
<form method="post" class="pt-2" enctype="multipart/form-data">
    <div class="container-fluid" style="text-align: center">
        <h3 class="text-left">Добавление книги</h3>
        <div class="d-sm-block bg-white border box-shadow mb-3 rounded p-3">

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Заголовок</h4>
                </div>
                <div class="col-sm">
                    @if (Model.BookDTO != null)
                    {
                        <input type="text" name="Title" required class="w-100 form-control" value="@Model.BookDTO.Title"/>
                    }
                    else
                    {
                        <input type="text" name="Title" required class="w-100 form-control" />
                    }
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Короткое описание</h4>
                </div>
                <div class="col-sm">
                    @if (Model.BookDTO != null)
                    {
                        <input type="text" name="DescriptionShort" required class="w-100 form-control" value="@Model.BookDTO.DescriptionShort" />
                    }
                    else
                    {
                        <input type="text" name="DescriptionShort" required class="w-100 form-control" />
                    }
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Полное описание</h4>
                </div>
                <div class="col-sm">
                    @if (Model.BookDTO != null)
                    {
                        <textarea name="DescriptionLong" required class="w-100 form-control" rows="4">@Model.BookDTO.DescriptionLong</textarea>
                    }
                    else
                    {
                        <textarea name="DescriptionLong" required class="w-100 form-control" rows="4"></textarea>
                    }
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Рейтинг</h4>
                </div>
                <div class="col-sm">
                    @if (Model.BookDTO != null)
                    {
                        <input type="number" max="5" min="0" step="0.1" name="AverageRating" required class="w-100 form-control" value="@Model.BookDTO.AverageRating"/>
                    }
                    else
                    {
                        <input type="number" max="5" min="0" step="0.1" name="AverageRating" required class="w-100 form-control" />
                    }
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Жанр</h4>
                </div>
                <div class="col-sm">
                    <select name="GenreId" class="form-control">
                        @foreach (var genre in @Model.GenreDTO)
                        {
                            @if (Model.BookDTO != null && genre.Id == Model.BookDTO.GenreId)
                            {
                                <option value="@genre.Id" selected>@genre.GenreName</option>
                            }
                            else
                            {
                                <option value="@genre.Id">@genre.GenreName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Автор</h4>
                </div>
                <div class="col-sm">
                    <select name="AuthorId" class="form-control">
                        @foreach (var author in Model.AuthorDTO)
                        {
                            @if (Model.BookDTO != null && author.Id == Model.BookDTO.AuthorId)
                            {
                                <option value="@author.Id" selected>@author.LastName</option>
                            }
                            else
                            {
                                <option value="@author.Id">@author.LastName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Статус</h4>
                </div>
                <div class="col-sm">
                    <select name="BookStatusId" class="form-control">
                        @foreach (var status in Model.BookStatusDTO)
                        {
                            @if (Model.BookDTO != null && status.Id == Model.BookDTO.BookStatusId)
                            {
                                <option value="@status.Id" selected>@status.StatusName</option>
                            }
                            else
                            {
                                <option value="@status.Id">@status.StatusName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Серия</h4>
                </div>
                <div class="col-sm">
                    <select name="BookSeriesId" class="form-control">
                        <option selected value="-1">Отсутсвует</option>
                        @foreach (var series in Model.BookSeriesDTO)
                        {
                            @if (Model.BookDTO != null && series.Id == Model.BookDTO.BookSeriesId)
                            {
                                <option value="@series.Id" selected>@series.SeriesName</option>
                            }
                            else
                            {
                                <option value="@series.Id">@series.SeriesName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Обложка</h4>
                </div>
                <div class="col-sm">
                    <input type="file" accept="image/*" class="form-control-file" name="newImage"/>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Книга</h4>
                </div>
                <div class="col-sm">
                    <input type="file" accept=".doc,.docx,.pdf,.epub,.fb2,.rtf,.html,.txt" class="form-control-file" name="newFile" required/>
                </div>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="row mt-4 text-center">
                    <div class="col-sm">
                        <p class="text-danger">@ViewData["Error"].ToString()</p>
                    </div>
                </div>
            }

            <div class="row mt-4">
                <div class="col-sm">
                    <h4>Тэги</h4>
                </div>
            </div>
            <div class="row mt-4 text-left">
                <div class="col-sm-3">
                    @foreach (var tag in Model.TagDTO)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="tagsId" value="@tag.Id" class="form-check-input" />
                            <label class="form-check-label">@tag.TagName</label>
                        </div>
                    }
                </div>
            </div>

            <div class="row mt-2 text-left">
                <button class="m-4 p-2 col-sm btn btn-outline-warning">Добавить книгу</button>
            </div>
        </div>
    </div>
</form>