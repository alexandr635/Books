@model Books.Application.DTO.ListDTO
@{
    ViewData["Title"] = "Добавление книги";
}
<form method="post" class="pt-2" enctype="multipart/form-data">
    <div class="container-fluid" style="text-align: center">
        <h3 class="text-left">Добавление жанра</h3>
        <div class="d-sm-block bg-white border box-shadow mb-3 rounded p-3">

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Заголовок</h4>
                </div>
                <div class="col-sm">
                    <input type="text" name="Title" required class="w-100 form-control" />
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Короткое описание</h4>
                </div>
                <div class="col-sm">
                    <input type="text" name="DescriptionShort" required class="w-100 form-control" />
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Полное описание</h4>
                </div>
                <div class="col-sm">
                    <input type="text" name="DescriptionLong" required class="w-100 form-control" />
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Рейтинг</h4>
                </div>
                <div class="col-sm">
                    <input type="number" max="5" min="0" step="0.1" name="AverageRating" required class="w-100 form-control" />
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Жанр</h4>
                </div>
                <div class="col-sm">
                    <select name="GenreId" class="form-control">
                        @foreach (var genre in @Model.GenreDTO)
                        {
                            <option value="@genre.Id">@genre.GenreName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Автор</h4>
                </div>
                <div class="col-sm">
                    <select name="AuthorId" class="form-control">
                        @foreach (var author in Model.AuthorDTO)
                        {
                            <option value="@author.Id">@author.LastName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Статус</h4>
                </div>
                <div class="col-sm">
                    <select name="BookStatusId" class="form-control">
                        @foreach (var status in Model.BookStatusDTO)
                        {
                            <option value="@status.Id">@status.StatusName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Серия</h4>
                </div>
                <div class="col-sm">
                    <select name="BookSeriesId" class="form-control">
                        <option selected value="-1">Отсутсвует</option>
                        @foreach (var series in Model.BookSeriesDTO)
                        {
                            <option value="@series.Id">@series.SeriesName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4 text-left">
                <div class="col-sm-4">
                    <h4>Обложка</h4>
                </div>
                <div class="col-sm">
                    <input type="file" accept="image/*" class="form-control-file" name="newImage" />
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-sm">
                    <h4>Тэги</h4>
                </div>
            </div>
            <div class="row mt-4 text-left">
                <div class="col-sm-3">
                    @foreach (var tag in Model.TagDTO)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="tagsId" value="@tag.Id" class="form-check-input" />
                            <label class="form-check-label">@tag.TagName</label>
                        </div>
                    }
                </div>
            </div>

            <div class="row mt-2 text-left">
                <button class="m-4 p-2 col-sm btn btn-outline-warning">Добавить книгу</button>
            </div>
        </div>
    </div>
</form>