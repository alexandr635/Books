@model Books.Application.DTO.BookSeriesDTO
@{
    ViewData["Title"] = "Изменение серии";
}

<form method="post" class="pt-2">
    <div class="container-fluid" style="text-align: center">
        <h3 class="text-left">Серия</h3>
        <div class="d-sm-block bg-white border box-shadow mb-3 rounded p-3">

            <input type="hidden" value="@Model.Id" name="Id" />

            <div class="row mt-2 text-left">
                <div class="col-sm-4">
                    <h4>Название серии</h4>
                </div>
                <div class="col-sm">
                    <input type="text" name="SeriesName" value="@Model.SeriesName" required class="w-100 form-control" />
                </div>
            </div>

            <div class="row mt-2 text-left">
                <button class="m-4 p-2 col-sm btn btn-outline-warning">Изменить серию</button>
            </div>
        </div>
    </div>
</form>