@model Books.Application.DTO.UserToRoleDTO
@{
    ViewData["Title"] = "Изменить пользователя";
}
<form method="post" class="pt-2">
    <div class="container-fluid" style="text-align: center">
        <h3 class="text-left">Тэг</h3>
        <div class="d-sm-block bg-white border box-shadow mb-3 rounded p-3">

            <input type="hidden" value="@Model.User.Id" name="Id" />

            <div class="row mt-2 text-left">
                <div class="col-sm-4">
                    <h4>Name</h4>
                </div>
                <div class="col-sm">
                    <input type="text" name="Login" value="@Model.User.Login" disabled class="w-100 form-control" />
                </div>
            </div>

            <div class="row mt-2 text-left">
                <div class="col-sm-4">
                    <h4>Role</h4>
                </div>
                <div class="col-sm">
                    <select name="RoleId" class="form-control">
                        @foreach (var role in Model.Roles)
                        {
                            if (role.Id == Model.User.RoleId)
                            {
                                <option selected value="@role.Id">@role.RoleName</option>
                            }
                            else
                            {
                                <option value="@role.Id">@role.RoleName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-2 text-left">
                <button class="m-4 p-2 col-sm btn btn-outline-warning">Изменить пользователя</button>
            </div>
        </div>
    </div>
</form>