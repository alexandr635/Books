@model Books.Application.DTO.FilterUserDTO
@{
    ViewData["Title"] = "Пользователи";
}
<h3>Пользователи</h3>
<div class="container">
    <form method="get" class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="bg-white container border box-shadow mb-3 rounded p-3">
                    <div class="row">
                        <div class="col-sm">
                            <input type="text" class="w-100 form-control" name="login" value="@Model.Login" />
                        </div>
                        <div class="col-sm-3">
                            <button class="w-100 p-2 btn btn-outline-warning">Найти</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                @if (Model.Users.Count == 0)
                {
                    <div class="bg-white container border box-shadow mb-3 rounded p-3">
                        <div class="row">
                            <div class="col-sm">
                                По вашему запросу ничего не найдено!
                            </div>
                        </div>
                    </div>
                }
                @foreach (var user in Model.Users)
                {
                    <div class="bg-white container border box-shadow mb-3 rounded p-3">
                        <div class="row text-center align-items-center">
                            <div class="col-sm p-2">
                                <h5 class="m-0">@user.Login</h5>
                            </div>

                            <div class="col-sm p-2">
                                <p class="m-0">[@user.RoleDTO.RoleName]</p>
                            </div>

                            <div class="col-sm">
                                <a href="User/Change/@user.Id" class="btn btn-outline-warning p-2 w-100">Статус</a>
                            </div>

                            <div class="col-sm">
                                <a href="User/Delete/@user.Id" class="btn btn-outline-warning p-2 w-100">Удалить</a>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="container fixed-bottom mb-5 pb-5">
            <div class="row ml-3 mr-3">
                <div class="col-sm text-left">
                    @if (Model.Page > 1)
                    {
                        <a asp-controller="User"
                           asp-action="Index"
                           asp-route-name="@(Model.Login)"
                           asp-route-page="@(Model.Page - 1)">Назад</a>
                    }
                </div>
                <div class="col-sm text-right">
                    @if (Model.Page < Model.PageCount)
                    {
                        <a asp-controller="User"
                           asp-action="Index"
                           asp-route-name="@(Model.Login)"
                           asp-route-page="@(Model.Page + 1)">Вперед</a>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
