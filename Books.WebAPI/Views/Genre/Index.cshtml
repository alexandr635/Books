@model List<Books.Application.DTO.GenreDTO>
@{
    ViewData["Title"] = "Жанры";
}
<div class="container">
    <div class="row mb-3">
        <div class="col-sm">
            <h3>Серии</h3>
        </div>
        <div class="col-sm-3">
            <form method="get" class="col-sm" action="~/addGenre">
                <button class="w-100 p-2 btn btn-outline-warning">Добавить жанр</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    @foreach (var genre in Model)
                    {
                        <div class="bg-white container border box-shadow mb-3 rounded p-3">
                            <div class="row">
                                <div class="col-sm">
                                    <h5>@genre.GenreName</h5>
                                </div>

                                <div class="col-sm-3 align-items-end">
                                    <div class="row text-center">
                                        <div class="col-sm">
                                            <a href="~/Genre/Change/@genre.Id">Изменить</a>
                                        </div>
                                        <div class="col-sm">
                                            <a href="~/Genre/Delete/@genre.Id">Удалить</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>